<%= render '/shared/title', title: "New Category" %>
<%= render '/shared/errors', error: @category %>

<div class='well'>
<%= form_for @category do |f| %>
  <div class='control-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit 'Create Category', class: 'btn' %>
<%end%>
</div>
